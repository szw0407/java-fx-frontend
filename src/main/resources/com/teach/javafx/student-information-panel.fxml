<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.teach.javafx.controller.CurrentStudentInformationController" spacing="10" alignment="TOP_LEFT" style="-fx-padding: 20;">
    <Label text="学生个人信息" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <GridPane hgap="10" vgap="10">
        <Label text="学生 ID:" visible="false"/>
        <TextField fx:id="studentIdField" GridPane.columnIndex="1" visible="false"/>

        <Label text="专业:" GridPane.rowIndex="5" />
        <TextField fx:id="majorField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="班级:" GridPane.rowIndex="2" />
        <TextField fx:id="classNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="人员 ID:" GridPane.rowIndex="3" />
        <TextField fx:id="personIdField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="学号:" GridPane.rowIndex="4" />
        <TextField fx:id="numField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="姓名:" GridPane.rowIndex="1" />
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="学院:" GridPane.rowIndex="6" />
        <TextField fx:id="deptField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <Label text="身份证号:" GridPane.rowIndex="7" />
        <TextField fx:id="cardField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

        <Label text="性别代号:" GridPane.rowIndex="8" />
        <TextField fx:id="genderField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

        <Label text="性别:" GridPane.rowIndex="9" />
        <TextField fx:id="genderNameField" GridPane.columnIndex="1" GridPane.rowIndex="9" />

        <Label text="生日:" GridPane.rowIndex="10" />
        <TextField fx:id="birthdayField" GridPane.columnIndex="1" GridPane.rowIndex="10" />

        <Label text="邮箱:" GridPane.rowIndex="11" />
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="11" />

        <Label text="电话:" GridPane.rowIndex="12" />
        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="12" />

        <Label text="地址:" GridPane.rowIndex="13" />
        <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="13" />

        <Label text="个人介绍:" GridPane.rowIndex="14" />
        <TextField fx:id="introduceField" GridPane.columnIndex="1" GridPane.rowIndex="14" />
    </GridPane>
</VBox>